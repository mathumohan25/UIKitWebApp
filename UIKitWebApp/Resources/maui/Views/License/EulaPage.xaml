                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </ScrollView>
        <Grid Grid.Row="2"
              ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    CornerRadius="0"
                    BackgroundColor="{DynamicResource Secondary}"
                    Text="Reject"
                    FontAttributes="Bold"
                    TextColor="{DynamicResource Black}"/>
            <Button Grid.Column="1"
                    CornerRadius ="0"
                    Text="Accept"
                    FontAttributes="Bold"
                    TextColor="{DynamicResource White}"/>
        </Grid>
    </Grid>
</ContentPage>